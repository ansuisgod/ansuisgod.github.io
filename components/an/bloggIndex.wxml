<!-- 帖子首页的模板 -->
<template name="bloggIndex">
<view class='outContainer' wx:for-item='item' wx:key='property' wx:for="{{conArr}}">
    <view class='insideCon'>
      <view class='top'>
        <!-- 用户的头像部分 -->
        <view class='left'>
          <!-- 没有用户的头像设置默认的用户的头像 -->
          <image wx:if="{{item.user.head_icon}}"  src='{{item.user.head_icon}}' bindtap='homePage' data-friendid='{{item.user.id}}'></image>
          <image wx:if="{{item.user.head_icon == undefined}}"  src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1561638291636&di=bae0f8e67e988b9522d8c6010f54c599&imgtype=0&src=http%3A%2F%2Fhbimg.b0.upaiyun.com%2Fa12f24e688c1cda3ff4cc453f3486a88adaf08cc2cdb-tQvJqX_fw658' bindtap='homePage' data-friendid='{{item.user.id}}'></image>
        </view>
        <!-- 用户的姓名 -->
        <view class='right'>{{item.user.nick_name}}</view>
      </view>
      <!-- 文章的标题 -->
      <view bindtap='clickIntoDetail' data-articlid='{{item.id}}' data-tagid='{{item.tag_id}}'>
        <view class='title'>
          {{item.title}}
        </view>
        <!-- 内容的标题 -->
        <view class='content'>
          {{item.summary.text}}
        </view>
        <!-- 封面图片 -->
        <view class='imageDiv'>
          <image wx:if="{{item.summary.images[0].url}}"  src='{{item.summary.images[0].url}}' mode='aspectFill'></image>
          <image wx:if="{{item.summary.images[1].url}}"  src='{{item.summary.images[1].url}}' mode='aspectFill'></image>
          <image wx:if="{{item.summary.images[2].url}}"  src='{{item.summary.images[2].url}}' mode='aspectFill'></image>
        </view>
        <view class='bottom'>
          <!-- 浏览粗疏 -->
          <view class='leftB'>
            <view class='leftBoxs'>
              <image wx:if="{{item.title}}" src='../../static/eye.png'></image>
            </view>
            <view class='look'>{{item.view_size}}</view>
          </view>
          <!-- 点赞的次数 -->
          <view class='rightB'>
            <view class='boxRight'>
              <image wx:if="{{item.title}}" src='../../static/like.png'></image>
            </view>
            <view class='like'>{{item.like_num}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  </template>