/* pages/blog/searchBlogMoreInfo/searchBlogMoreInfo.wxss */
.allBox{
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid #f3f3f3;
}
.allBox .cycleBox{
  width: 95%;
  height: 400rpx;
  margin: 0 auto;
}
.allBox .cycleBox .top{
  width: 100%;
  height: 50rpx;
  display: flex;
}
.allBox .cycleBox .top .left{
  padding-top:20rpx; 
  width: 10%;
  flex-direction: row;
}
.allBox .cycleBox .top .left image{
  border-radius: 60rpx;
  width: 60rpx;
  height: 60rpx;
}
.allBox .cycleBox .top .right{
  padding-top:25rpx; 
  color: #656565;
  font-size: 32rpx;
  width: 90%;
  flex-direction: row;
}
.allBox .cycleBox .center{
  width: 100%;
  height: 270rpx;
  display: flex;
}
.allBox .cycleBox .center .cLeft{
  width: 70%;
  flex-direction: row;
}
.allBox .cycleBox .center .cLeft .title{
  padding: 35rpx 0 0 0;
  font-size: 38rpx;
  color: #5d5d5d;
  font-weight: 600;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.allBox .cycleBox .center .cLeft .contentTitle{
  padding: 35rpx 0 0 0;
  font-size: 32rpx;
  color: #8c8c8c;
  overflow: hidden;
  text-overflow:ellipsis;
  height: 150rpx;
}
.allBox .cycleBox .center .cRight{
  width: 30%;
  flex-direction: row;
  text-align: center;
}
.allBox .cycleBox .center .cRight image{
  padding: 35rpx 0 0 0;
  width: 190rpx;
  height: 150rpx;
}
.allBox .cycleBox .bottoms{
  width: 100%;
  height: 80rpx;
  display: flex;
  position: relative;
}
.allBox .cycleBox .bottoms .bLeft{
  position: absolute;
  right: 280rpx;
  top: 0;
  flex-direction: row;
}
.allBox .cycleBox .bottoms .bLeft image{
  width: 45rpx;
  height: 45rpx;
}
.allBox .cycleBox .bottoms .bLeft .look{
  position: absolute;
  right: -45rpx;
  top: 5rpx;
  color: #a9a9a9;
  font-size: 28rpx;
}
.allBox .cycleBox .bottoms .bRight{
  position: absolute;
  right: 100rpx;
  top: 0;
  flex-direction: row;
}
.allBox .cycleBox .bottoms .bRight image{
  width: 45rpx;
  height: 45rpx;
}
.allBox .cycleBox .bottoms .bRight .like{
  color: #a9a9a9;
  position: absolute;
  right: -35rpx;
  top: 5rpx;
  font-size: 28rpx;
}