/* pages/blog/searchBlogMoreInfo/searchBlogMoreInfo.wxss */
.allBox{
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid #f3f3f3;
}
.allBox .cycleBox{
  width: 95%;
  height: auto;
  margin: 0 auto;
}
.allBox .cycleBox .top{
  width: 100%;
  height: 50rpx;
  display: flex;
}
.allBox .cycleBox .top .left{
  padding-top:20rpx; 
  width: 10%;
  flex-direction: row;
}
.allBox .cycleBox .top .left image{
  border-radius: 60rpx;
  width: 60rpx;
  height: 60rpx;
}
.allBox .cycleBox .top .right{
  padding-top:25rpx; 
  color: #656565;
  font-size: 32rpx;
  font-family: '宋体 SimSun';
  width: 90%;
  flex-direction: row;
}
.allBox .cycleBox .center{
  width: 100%;
  height: 210rpx;
  display: flex;
  flex-direction: row;
}
.allBox .cycleBox .center .cLeft{
  width:70%;
  flex-direction: row;
}
.allBox .cycleBox .center .cLeft .title{
  padding: 40rpx 0 0 0;
  font-size: 32rpx;
  color: #5d5d5d;
  font-weight: 600;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-family: '宋体 SimSun';
}
.allBox .cycleBox .center .cLeft .contentTitle{
  padding: 15rpx 0 0 0;
  font-size: 30rpx;
  color: #8c8c8c;
  overflow: hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp: 3;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  height: 110rpx;
  font-family: '宋体 SimSun';
}
.allBox .cycleBox .center .cRight{
  width: 30%;
  flex-direction: row;
  text-align: center;
}
.allBox .cycleBox .center .cRight image{
  padding: 35rpx 0 0 0;
  width: 190rpx;
  height: 150rpx;
}
.allBox .cycleBox .bottom{
  width: 100%;
  height: 80rpx;
  display: flex;
}
.allBox .cycleBox .bottom .leftB{
  width: 85%;
  flex-direction: row;
  display: flex;
  text-align: right;
}
.allBox .cycleBox .bottom .leftB .leftBoxs{
  width: 85%;
  flex-direction: row;
  line-height: 85rpx;
}
.allBox .cycleBox .bottom .leftB .leftBoxs image{
  width: 45rpx;
  height: 45rpx;
}
.allBox .cycleBox .bottom .leftB .look{
  line-height: 70rpx;
  width: 15%;
  flex-direction: row;
  color: #a9a9a9;
  font-size: 28rpx;
  text-align: center;
  font-family: '宋体 SimSun';
}
.allBox .cycleBox .bottom .rightB{
  width: 15%;
  flex-direction: row;
  display: flex;
}
.allBox .cycleBox .bottom .rightB .boxRight{
  width: 50%;
  flex-direction: row;
  line-height: 85rpx;
}
.allBox .cycleBox .bottom .rightB .boxRight image{
  width: 45rpx;
  height: 45rpx;
}
.allBox .cycleBox .bottom .rightB .like{
  text-align: center;
  line-height: 70rpx;
  width: 50%;
  color: #a9a9a9;
  flex-direction: row;
  font-size: 28rpx;
  font-family: '宋体 SimSun';
}