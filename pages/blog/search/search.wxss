/* pages/blog/search/search.wxss */
/* 输入框部分 */
.mainBoxx{
  margin: 90rpx 0 0 0;
}
.foundFriend .more{
   width: 100%;
   color: #fd7380;
   text-align: center;
   font-size: 30rpx;
   padding: 20rpx 0;
   font-family: '宋体 SimSun';
}
.searchForPosts .more{
  width: 100%;
   color: #fd7380;
   text-align: center;
   font-size: 30rpx;
   padding: 20rpx 0;
   font-family: '宋体 SimSun';
}
.askTheExperts .more{
  width: 100%;
  color: #fd7380;
  text-align: center;
  font-size: 30rpx;
  padding: 20rpx 0;
  font-family: '宋体 SimSun';
}
.search{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  border-bottom: 1px solid #999;
  background-color: #fff;
}
.search .seaInput{
  width: 90%;
  margin: 20rpx auto;
  flex-direction: row;
}
.search .seaInput input{
  font-size: 30rpx;
  border-radius: 35rpx;
  background-color: #f6f6f6;
  font-family: '宋体 SimSun';
  padding: 0 0 0 12rpx;
  height: 60rpx;
}
/* 问专家 */
.askTheExperts{
  width: 100%;
  height: 100%;
  border-bottom: 10rpx solid #f5f5f5;
}
.askTheExperts .insideC{
  width: 90%;
  height: auto;
  margin: 0 auto;
  border-bottom: 1px solid #f5f5f5;
}
.askTheExperts .askTitle{
  font-family: '宋体 SimSun';
  padding: 20rpx 35rpx;
  font-size: 32rpx;
  color: #898989;
}
.askTheExperts .insideC .asking{
  padding: 20rpx 0;
  display: flex;
}
.askTheExperts .insideC .asking .askLeft{
  width: 10%;
  flex-direction: row;
}
.askTheExperts .insideC .asking .askLeft .askIcon{
  width: 60rpx;
  height: 60rpx;
  background-color: #fd7380;
  border-radius: 50rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  font-family: '宋体 SimSun';
  color: #fff;
}
.askTheExperts .insideC .asking .askLeft .answer{
  width: 60rpx;
  height: 60rpx;
  background-color: #a9a9a9;
  border-radius: 50rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #fff;
}
.askTheExperts .insideC .asking .askRight{
  padding-top:10rpx; 
  color: #656565;
  font-size: 30rpx;
  font-family: '宋体 SimSun';
  width: 90%;
  flex-direction: row;
}
.askTheExperts .insideC .asking .askRight1{
  padding-top:10rpx; 
  color: #656565;
  font-size: 32rpx;
  width: 90%;
  height: auto;
  overflow: hidden;
  flex-direction: row;
}
/* 搜帖子 */
.searchForPosts{
  width: 100%;
  height: 100%;
}
.searchForPosts .insideSearch{
  width: 90%;
  height: auto;
  border-bottom: 1px solid #f5f5f5;
  margin: 0 auto;
}
.searchForPosts .askTitle{
  padding: 20rpx 35rpx;
  font-size: 32rpx;
  font-family: '宋体 SimSun';
  color: #898989;
}
.searchForPosts .insideSearch .asking{
  padding: 20rpx 0;
  display: flex;
}
.searchForPosts .insideSearch .asking .askLeft{
  width: 10%;
  flex-direction: row;
}
.searchForPosts .insideSearch .asking .askLeft image{
  border-radius: 60rpx;
  width: 60rpx;
  height: 60rpx;
}
.searchForPosts .insideSearch .asking .askRight{
  padding-top:10rpx; 
  color: #656565;
  font-size: 30rpx;
  width: 90%;
  flex-direction: row;
}
.searchForPosts .insideSearch .articalTitle{
  padding: 15rpx 0;
  font-size: 32rpx;
  font-family: '宋体 SimSun';
  color: #676767;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.searchForPosts .insideSearch .contentTtile{
  padding: 15rpx 0;
  font-size: 30rpx;
  font-family: '宋体 SimSun';
  color: #737373;
  display: flex;
  overflow:hidden;
  text-overflow:ellipsis;
  height: 100rpx;
}
.searchForPosts .insideSearch .contentTtile .textLeft{
  width: 70%;
  flex-direction: row;
}
.searchForPosts .insideSearch .contentTtile .picRight{
  width: 30%;
  flex-direction: row;
}
.searchForPosts .insideSearch .contentTtile .picRight image{
  width: 200rpx;
  height: 150rpx;
}
.searchForPosts .insideSearch .askBottom{
  width: 100%;
  height: 60rpx;
  display: flex;
  position: relative;
}
.searchForPosts .insideSearch .askBottom .askBLeft{
  position: absolute;
  right: 280rpx;
  top: 0;
  flex-direction: row;
}
.searchForPosts .insideSearch .askBottom .askBLeft image{
  width: 45rpx;
  height: 45rpx;
}
.searchForPosts .insideSearch .askBottom .askBLeft .look{
  position: absolute;
  right: -45rpx;
  top: 5rpx;
  color: #a9a9a9;
  font-size: 28rpx;
  font-family: '宋体 SimSun';
}
.searchForPosts .insideSearch .askBottom .askBRight{
  position: absolute;
  right: 100rpx;
  top: 0;
  flex-direction: row;
}
.searchForPosts .insideSearch .askBottom .askBRight image{
  width: 45rpx;
  height: 45rpx;
}
.searchForPosts .insideSearch .askBottom .askBRight .like{
  color: #a9a9a9;
  position: absolute;
  right: -35rpx;
  top: 5rpx;
  font-size: 28rpx;
  font-family: '宋体 SimSun';
}
