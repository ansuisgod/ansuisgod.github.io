/* pages/index/task/task.wxss */
page {
 height: 100%;
}
view , scroll-view{
 padding: 0;
 margin: 0;
}
.weui-navbar{
 width: 100%;
 position: fixed;
 box-sizing: border-box;
 white-space: nowrap; 
 z-index: 100;
 background: white;
}
.rec{
 width: 100%;
 height: 7%;
}
.weui-navbar .default-item{
 /*width:25%;*/
 display: inline-block;
 text-align: center;
 font-size: 32rpx;
 box-sizing: border-box;
 height: 90rpx;
 line-height:90rpx;
 padding-bottom: 15rpx;
 color: #818181;
 font-family: '宋体 SimSun';
}
.weui-navbar .item_on{
 border-bottom: 2px solid #fd7380;
 color: #fd7380;
}
.weui-navbar-slider{
 position: absolute;
 width: 160rpx;
 height: 2px;
 content:"";
 background: #fd7380;
 bottom: 0;
 left: 12.5rpx;
 transition: transform .3s;
}
.swiper-box{
  display: block;
  overflow-y: hidden;
  height:100%;
  border-bottom: none;
}
.swiper-box .swiper-item{
 text-align: center;
 padding-top: 10rpx;
 height: 100%;
}
.swiper-box .swiper-item .slide-view{
  align-items: center;
  box-sizing: border-box;
  margin: 25rpx 0 0 0;
}
.swiper-box .swiper-item .slide-view .picture{
  margin: 30rpx 0;
}
.swiper-box .swiper-item .slide-view .picture image{
  width: 600rpx;
  height: 250rpx;
}
.dailyTask{
  width: 100%;
  min-height: 200rpx;
  border-bottom: 1px solid #d9d9d9;
}
.dailyTask .dailyTaskInfo{
  width: 90%;
  height: 100%;
  margin: 0 auto;
}
.dailyTask .dailyTaskInfo .taskTtile{
  padding: 15rpx 10rpx;
  font-size: 32rpx;
  color: #4e4e4e;
  text-align: left;
  font-family: '宋体 SimSun';
}
.dailyTask .dailyTaskInfo .botomDaily{
  text-align: left;
  padding: 15rpx 10rpx;
  height: 100%;
}
.dailyTask .dailyTaskInfo .botomDaily image{
  width: 50rpx;
  height: 50rpx;
}
.dailyTask .dailyTaskInfo .botomDaily .integral{
  vertical-align: middle;
  color: #fd7380;
  font-family: '宋体 SimSun';
  font-size: 30rpx;
}