/* pages/index/expertsReply/expertsReply.wxss */
/* 上面用户信息的部分样式 */
.box{
  width: 100%;
  height: auto;
}
.box .outBox{
  width: 95%;
  margin: 30rpx auto 15rpx auto;
  height: 100%;
}
.box .outBox .topA{
  display: flex;
  width: 100%;
  height: 90rpx;
}
.box .outBox .topA .userPic{
  width: 15%;
  flex-direction: row;
}
.box .outBox .topA .userPic image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
}
.box .outBox .topA .replayText{
  font-size: 34rpx;
  color: #2c2c2c;
  line-height: 90rpx;
  width: 85%;
  flex-direction: row;
}
.box .outBox .topA .replayText .names{
  color: #fd7380;
}
.box .outBox .centerA{
  padding: 15rpx 0 0 0;
  font-size: 38rpx;
  color: #303030;
  font-weight: 700
}
.box .outBox .bottomA{
  padding: 15rpx 10rpx 0 0;
  font-size: 32rpx;
  color: #696969;
}
/* 下面专家回复样式区域 */
.box .expectsReply{
  width: 95%;
  margin: 50rpx auto 10rpx auto;
  height: 100%;
}
.box .expectsReply .replayList{
  padding: 20rpx 0;
  border-top: 1px solid #ddd;
  display: flex;
}
.box .expectsReply .replayList .userPicLeft{
  width: 15%;
  flex-direction: row;
}
.box .expectsReply .replayList .userPicLeft image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
}
.box .expectsReply .replayList .right{
  width: 85%;
  flex-direction: row;
}
.box .expectsReply .replayList .right .userArea{
  display: flex;
}
.box .expectsReply .replayList .right .userArea .name{
  width: 85%;
  flex-direction: row;
}
.box .expectsReply .replayList .right .userArea .more{
  width: 15%;
  flex-direction: row;
}
.box .expectsReply .replayList .right .userArea .more image{
  width: 40rpx;
  height: 40rpx;
}
.box .expectsReply .replayList .right .rightContent{
  padding: 15rpx 0;
  font-size: 32rpx;
  color: #696969;
}
.box .expectsReply .replayList .right .rightFloor{
   font-size: 30rpx;
   color: #a1a1a1;
}