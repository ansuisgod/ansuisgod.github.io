@import '../../../components/wux.wxss';

/* 遮罩层 */
.addBox-choose-cover {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 33;
}



/* 按钮 */
.top-box{
  position: fixed;
  right: 45rpx;
  bottom: 100rpx;
}




.motionRecords-box{}


.motionRecords-box-head{
  height: 30rpx;
  width: 100%;
  /* background-color: yellowgreen; */
  display: flex;
}


.motionRecords-box-head-style{
  width: 29%;
  border-right: 1rpx solid #f5f5f5;
  /* background-color: red; */
}


/* 主体 */

.motionRecords-box-main{
  display: flex;
  height: 200rpx;
}


.motionRecords-box-main-lft{
  width: 25.5%;
  /* background-color: yellowgreen; */
}

.motionRecords-box-main-lft-box{}

.motionRecords-box-main-lft-box-year{
  width: 191.25rpx;
  height: 60rpx;
  font-size: 60rpx;
