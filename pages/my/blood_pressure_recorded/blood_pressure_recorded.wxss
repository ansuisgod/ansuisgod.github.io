  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 30rpx;
  /* background-color: yellow; */
}

.motionRecords-box-main-lft-box-month{
  width: 217.5rpx;
  height: 40rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: blueviolet; */
}

.motionRecords-box-main-lft-box-date{}


