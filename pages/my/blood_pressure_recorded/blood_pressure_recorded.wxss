  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.motionRecords-box-main-cen-img image{
  height: 45rpx;
  width: 45rpx;
}

.motionRecords-box-main-cen-line{
    width: 100%;
  height: 100rpx;
}

.motionRecords-box-main-cen-line-line{
