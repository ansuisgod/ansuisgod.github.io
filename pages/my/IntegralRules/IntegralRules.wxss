page{
  background-color: #f8f8f8;
}

.listBox{
  widows: 100%;
  height: 150rpx;
  background-color: white;
  border-bottom: 1rpx solid #f5f5f5;
}

.listBox:active{
  background-color: 	#f2f2f2;
}

.listBox-List{
  display: flex;
  width: 90%;
  margin-left: 5%;
}

.listBox-List-img{
  width: 125rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.listBox-List-img image{
  height: 107rpx;
  width: 100rpx;
}

.listBox-List-text{
  width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.listBox-List-text-top{
  color: #333333;
  font-size: 32rpx;
}

.listBox-List-text-bot{
    color: #666666;
  font-size: 25rpx;
}