.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 10px;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 30rpx;
  /* margin-top: 30rpx; */
}

.weui-uploader__title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;


  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  color:rgba(51,51,51,1);
  
}

.weui-uploader__info {
  color: #B2B2B2;
}

.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
  height: 230rpx;
}

.weui-uploader__file {
  float: left;
  margin-left: 24rpx;
  margin-bottom: 20rpx;
}

.weui-uploader__img {
  position:relative;
  display: block;
  width: 218rpx;
  height: 218rpx;
}

.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-left: 24rpx;
  margin-bottom: 20rpx;
  width: 218rpx;
  height: 218rpx;
  border: 1px solid #D9D9D9;
}
.weui-uploader__input-box:before,
.weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #D9D9D9;
}
.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
.weui-uploader__input-box:active {
  border-color: #999999;
}
.weui-uploader__input-box:active:before,
.weui-uploader__input-box:active:after {
  background-color: #999999;
}

.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

