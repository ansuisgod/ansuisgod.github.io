/* 遮罩层 */
.addBox-choose-covers {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.input-Max {
  width: 650rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 50rpx;
  margin-top: 30rpx;
}

.input-box {
  border: 4rpx solid #dadada;
  background-color:#fff;
  color: #b9b9b9;
  padding: 10rpx 0;
  font-size: 35rpx;
  opacity: 0.9;
  flex: 9;
}

.input-box input {
  width: 600rpx;
  margin-left: 25rpx;
  min-height: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
}







.textarea-max {
  width: 650rpx;
  height: 640rpx;
