  margin-left: 50rpx;
  margin-top: 30rpx;
}

.textarea-box {
  border: 4rpx solid #dadada;
  background-color:#fff;
  color: #b9b9b9;
  padding: 20rpx 0;
  font-size: 35rpx;
  opacity: 0.9;
  flex: 9;
}

.textarea-box textarea {
  width: 600rpx;
  margin-left: 25rpx;
  /* min-height: 60rpx;
