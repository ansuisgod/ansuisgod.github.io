/* 底部栏 */


.bar-box{
  height: 110rpx;
  width: 100%;
  background-color: #585959;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 40;
  box-shadow:0rpx -2rpx 6rpx #333333;

display: flex;

}

.bar-box-head{
  height: 110rpx;
  width: 30rpx;
  box-shadow:10rpx 0rpx 6rpx #333333;
  background-color: #585959;
  z-index:  41;
}

.bar-box-scroll{
  width: 600rpx;
overflow: hidden;
white-space: nowrap;
 margin-left: -40rpx;
}


.bar-box-scroll-box{
  width: 150rpx;
  height: 110rpx;
  display: inline-block;
  padding-top: 7.5rpx;
}

.bar-box-scroll-img{
  display: flex;
  /* background-color: yellow; */
}


.bar-box-scroll-img1{
  width: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #a2a2a2;
}

.bar-box-scroll-img2{
  position: relative;
}


.bar-box-scroll-img2-del{  
  /* background-color: yellowgreen; */
  position: absolute;
right: 0;
top: 0;
z-index: 50;
}


.bar-box-scroll-img2 image{
  height: 95rpx;
  width: 95rpx;
  display: flex
}

.save-box{
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: rosybrown; */
}

.save-btn{
  height: 60rpx;
  width: 125rpx;
  background-color: #fe7281;
  box-shadow:0rpx 3rpx 6rpx #404040;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}


.save-btn:active {
  background-color: #fe0101;
}


