.setting-box-options {
  width: 100%;
  /* margin-left: 5%; */
  height: 100rpx;
  /* margin-top: 35rpx; */
  display: flex;
}

.setting-box-options:active{
  background-color: 	#f2f2f2;
}



.setting-box-options-title {
  flex: 8;
  font-size: 30rpx;
  margin-left: 37.5rpx;
  color: #5e5e5e;
