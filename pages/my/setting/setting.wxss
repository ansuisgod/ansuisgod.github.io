  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-box-options-rit {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-box-options-rit image {
  height: 60rpx;
  width: 60rpx;
}






