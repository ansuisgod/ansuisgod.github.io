/* pages/shopping/change/change.wxss */
/* 商品的信息 */
.outmain{
  width: 90%;
  height: 100%;
  margin: 0 auto;
}
.outmain .goodsTop{
  display: flex;
  height: 90rpx;
  border-bottom: 1px solid #5d5d5d;
  padding: 20rpx 0 30rpx 15rpx;
}
.outmain .goodsTop .goodPic{
  padding: 10rpx 0 0 0;
  flex-direction: row;
}
.outmain .goodsTop .goodPic image{
  width: 90rpx;
  height: 80rpx;
}
.outmain .goodsTop .goodDesc{
  padding: 0 0 0 15rpx;
  flex-direction: row;
}
.outmain .goodsTop .goodDesc .goodsTiltle{
  padding: 5rpx 0 0 15rpx;
  color: #5f5f5f;
  font-size: 33rpx;
}
.outmain .goodsTop .goodDesc .integral{
  padding: 0 0 0 15rpx;
  color: #fd7380;
  font-size: 30rpx;
  font-weight: 600;
}

/* 收货人的联系方式的输入区域 */
.outmain .contactInformationOfConsignee{
  display: flex;
  height: 100rpx;
  border-bottom: 1px solid #5d5d5d;
}
.outmain .contactInformationOfConsignee .goodPic{
  padding: 15rpx 0 0 0;
  flex-direction: row;
  font-size: 33rpx;
}

.outmain .contactInformationOfConsignee .goodDesc{
  padding: 15rpx 0 0 15rpx;
  flex-direction: row;
  font-size: 33rpx;
}

.outmain .consigneeDetail{
  font-size: 33rpx;
  height: 220rpx;
  border-bottom: 1px solid #5d5d5d;
}
.outmain .consigneeDetail .goodPic{
  padding: 15rpx 0 0 0;
}
.outmain .consigneeDetail textarea{
  width: 100%;
  height: 110rpx;
  padding: 15rpx 0 0 0;
}
.outmain .confirms{
  width: 80%;
  margin: 50rpx auto 0 auto;
  border-radius: 20rpx;
}