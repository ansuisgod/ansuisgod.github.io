/* pages/shopping/forRecord/forRecord.wxss */
.theOutsidePart{
  width: 100%;
  height: auto;
}
.theOutsidePart .line{
  width: 90%;
  height: 120rpx;
  display: flex;
  margin: 15rpx auto;
  border-bottom: 1px solid #c7c7cb;
}
.theOutsidePart .line .lineLeft{
  position: relative;
  flex-direction: row;
}
.theOutsidePart .line .lineLeft .shelves{
  /* 新增加的样式代码 定位已下架字 20190606 */
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(000, 000, 000, 0.5);
  color: #fff;
  font-size: 28rpx;
  line-height: 120rpx;
  text-align: center;
}
.theOutsidePart .line .lineLeft image{
  width: 100rpx;
  height: 100rpx;
}
.theOutsidePart .line .lineRight{
  flex-direction: row;
}
.theOutsidePart .line .lineRight .top{
  padding: 5rpx 0 5rpx 20rpx;
  font-size: 34rpx;
  color: #5e5e5e;
  font-weight: 600;
}
.theOutsidePart .line .lineRight .bottom{
  padding: 5rpx 0 5rpx 20rpx;
  font-size: 32rpx;
  color: #858585;
}
.theOutsidePart .empty{
  width: 100%;
  height: 100%;
  text-align: center;
  color: #999;
  font-size: 34rpx;
  margin-top: 500rpx;
}