/* pages/shopping/goodsDetails/goodsDetails.wxss */
.titleDesc{
  width: 90%;
  margin: 0 0 0 25rpx;
  padding: 0 0 15rpx 0;
  border-bottom: 1px solid #e6e6e6;
}
.titleDesc .titlesd{
  padding: 10rpx 0 0 15rpx;
  color: #676767;
  font-size: 32rpx;
}
.titleDesc .inteager{
  padding: 10rpx 0 0 15rpx;
  color: #fd7380;
  font-size: 32rpx;
}
.detailContent{
  width: 90%;
  margin: 0 0 0 25rpx;
  padding: 0 0 15rpx 0;
  border-bottom: 1px solid #e6e6e6;
}
.detailContent .content{
  padding: 10rpx 0 0 15rpx;
  color: #5f5f5f;
  font-size: 32rpx;
}
.iWant{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
}
.picture{
  position: relative;
  width: 100%;
  height: 500rpx;
}
.picture image{
  width: 100%;
  background-size: cover;
}
.picture .inventory{
  position: absolute;
  bottom:-10rpx;
  right: 20rpx;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fd7380;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 30rpx;
}