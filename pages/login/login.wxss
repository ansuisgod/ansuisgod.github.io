/* pages/login/login.wxss */
.show{
  display: block;
}
.hidden{
  display: none;
}
.active{
  color: #fd7380;
  font-weight: 600;
}
.section .help{
  font-size:0.8rem;
  width: 100%;
  height: 340rpx;
  background-size: 100% 100%;
}
.section .taBar{
  width: 100%;
  height: 80rpx;
  display: flex;
  color: #a5a5a5;
  line-height: 80rpx;
}
.section .taBar .left{
  text-align: center;
  width: 50%;
  flex-direction: row;
}
.section .taBar .right{
  text-align: center;
  width: 50%;
  flex-direction: row;
}
.section .rowlist{
  width: 95%;
  height: 90rpx;
  font-size:0.8rem;
  display: flex;
  margin-left: 20rpx;
  border-bottom: 1px solid #5e5e5e;
}
.section .rowlist .left{
  border-right: 1px solid #e8e5e5;
  line-height: 90rpx;
  padding-left: 12rpx;
  width: 13%;
  flex-direction: row;
}
.section .rowlist .right{
  width: 87%;
  margin-left: 30rpx;
  flex-direction: row;
}
.section .rowlist .right input{
  margin-top: 22rpx;
}
.section .rowlistcode{
  width: 95%;
  height: 90rpx;
  font-size:0.8rem;
  display: flex;
  margin-left: 20rpx;
  margin-top: 30rpx;
  border-bottom: 1px solid #5e5e5e;
}
.section .rowlistcode .left{
  padding-left: 12rpx;
  margin-top: 21rpx;
  width: 60%;
  flex-direction: row;
}
.section .rowlistcode .right{
  width: 40%;
  flex-direction: row;
}
.section .rowlistcode .right button{
  color: #a5a5a5;
  background-color: #e5e5e5;
  font-size:0.7rem;
  padding-top: 9rpx;
  width: 220rpx;
  height: 80rpx;
  border-radius: 50rpx;
}
button::after{
  border: none;
}
.section .loginbtn{
  width: 90%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  margin-left: 20rpx;
  margin-top: 50rpx;
}
.section .loginbtn button{
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 38rpx;
  text-align: center;
  line-height: 100rpx;
  z-index: 10;
  box-shadow: 0rpx 5rpx 12rpx #959595;
}
.section .loginbtn:active {
  background-color: rgba(254, 114, 129, 0.8);
}
.section .registerist{
  font-size: 0.8rem;
  width: 90%;
  height: 80rpx;
  text-align: right;
  padding-top: 25rpx;
  margin-left: 50rpx;
}
.section .accountLogin{
  color: #a5a5a5;
  text-align: left;
  margin-top: 100rpx;
  padding-left:0.5rem; 
  font-size: 0.8rem;
}